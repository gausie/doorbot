extends layout

block body
  div.container(ng-controller='AppCtrl')

    nav.navbar.navbar-default(role='navigation')
      .container-fluid

        .navbar-header
          button.navbar-toggle.collapsed(type='button',data-ng-init='isCollapsed = true',data-ng-click='isCollapsed = !isCollapsed')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#')
            | Doorbot&nbsp;
            i.fa.fa-key

        .collapse.navbar-collapse(data-collapse='isCollapsed')
          ul.nav.navbar-nav
            li(ng-class='{ active: isActive(\'/\', true) }')
              a(href='/') Home
            li(ng-class='{ active: isActive(\'/users\') }')
              a(href='/users') Users
            li(ng-class='{ active: isActive(\'/logs\') }')
              a(href='/logs') Logs


    div(ng-view)

  script(src='lib/angular/angular.js')
  script(src='lib/moment/moment.js')
  script(src='lib/lodash/dist/lodash.min.js')
  script(src='lib/angular-sanitize/angular-sanitize.min.js')
  script(src='lib/angular-loading-bar/build/loading-bar.min.js')
  script(src='lib/angular-resource/angular-resource.min.js')
  script(src='lib/angular-route/angular-route.min.js')
  script(src='lib/angular-bootstrap/ui-bootstrap.min.js')
  script(src='lib/angular-bootstrap/ui-bootstrap-tpls.min.js')
  script(src='lib/angular-ui-select/dist/select.min.js')
  script(src='lib/angular-moment/angular-moment.min.js')
  script(src='lib/angular-lodash/angular-lodash.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
